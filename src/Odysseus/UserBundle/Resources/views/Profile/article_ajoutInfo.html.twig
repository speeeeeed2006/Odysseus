{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div id="profil">

        {% include "OdysseusUserBundle:Default:menuProfile.html.twig" %}
        <form action="{{ path('odysseus_front_profile_article_ajout_info', {'id': app.request.attributes.get('id')}) }}" {{ form_enctype(form) }} method="POST">
            <div id="detail">
                {{ ladybug_dump(form) }}
                <div>
                    {{ form_errors(form.remarque) }}
                    {{ form_label(form.remarque, "Une déscription de votre article(état, rayure, couleur ...) :") }}
                    {{ form_row(form.remarque) }}
                </div>
                <div>
                    {{ form_errors(form.prix) }}
                    {{ form_label(form.prix, "Votre prix de vente :") }}
                    {{ form_widget(form.prix) }}
                </div>
                <div>
                    {{ form_errors(form.stock) }}
                    {{ form_label(form.stock, "Combien souhaitez-vous en vendre (votre stock) :") }}
                    {{ form_widget(form.stock) }}
                </div>
                <div>
                    {{ form_errors(form.etat) }}
                    {{ form_label(form.etat, "etat :") }}
                    {{ form_widget(form.etat) }}
                </div>
                <div>
                    {{ form_row(form._token) }}
                    <button type="submit">Valider</button>
                </div>
            </div>
        </form>
    </div>

{% endblock fos_user_content %}