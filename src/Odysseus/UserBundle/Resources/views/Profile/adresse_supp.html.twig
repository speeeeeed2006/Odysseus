{% extends "OdysseusUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
    <div id="profil">

        {% include "OdysseusUserBundle:Default:menuProfile.html.twig" %}

        <div id="detail">
            <form action="{{ path('odysseus_front_adresse_supp', {'id': app.request.attributes.get('id')}) }}" {{ form_enctype(form) }} method="POST">

                <h2>Modifier l'adresse</h2>
                <div>
                    {{ form_errors(form.adresse) }}
                    {{ form_label(form.adresse, "Voie (numero de rue, voie) :") }}
                    {{ form_row(form.adresse) }}
                </div>
                <div>
                    {{ form_errors(form.cp) }}
                    {{ form_label(form.cp, "Code postale :") }}
                    {{ form_widget(form.cp) }}
                </div>
                <div>
                    {{ form_errors(form.ville) }}
                    {{ form_label(form.ville, "Ville :") }}
                    {{ form_widget(form.ville) }}
                </div>
                <div>
                    {{ form_errors(form.pays) }}
                    {{ form_label(form.pays, "Pays :") }}
                    {{ form_widget(form.pays) }}
                </div>
                <div>
                    {{ form_row(form._token) }}
                    <button type="submit">Supprimer l'adresse</button>
                    <a href="{{ path('odysseus_front_profile_adresse') }}">Non</button>
                </div>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}