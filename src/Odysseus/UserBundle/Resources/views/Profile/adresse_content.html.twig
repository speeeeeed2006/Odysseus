{% trans_default_domain 'FOSUserBundle' %}

<div id="profil">
    {% include "OdysseusUserBundle:Default:menuProfile.html.twig" %}
    
    <div id="detail">
        <h2>Mes adresses</h2>
        <div id="adresses">
            {% if (liste_adresse is empty) %}
                <span>
                        Vous n'avez renseign√© aucune adresse
                </span>
                <br />
                <button>Ajouter une adresse</button>
            {% else %} 
                {% for adr in liste_adresse %}
                    <div class="cartouche">
                        <span class="type">
                            {% if (adr.type != 0) %} 
                                Votre adresse de facturation :
                            {% else %}
                                Votre adresse de livraison :
                            {% endif %}
                        </span>
                        <br />
                        <div class="donne_adresse">
                            Adresse : {{ adr.adresse}}
                        </div>
                         <div class="donne_adresse">
                            Code postal : {{ adr.cp}}
                        </div>
                         <div class="donne_adresse">
                            Ville : {{ adr.ville}}
                        </div>
                        <div class="donne_adresse">
                            Pays : {{ adr.pays}}
                        </div>
                        <span class="edition_adresse">
                            <a href="{{ path('odysseus_front_adresse_edit', {'id': adr.idAdresse})}}"><img src="/odysseus/web/images/glyphicons_edit.png"> modifier cette adresse</a>
                        </span>
                        <br />
                        <span class="supp_adresse">
                            <a href="{{ path('odysseus_front_adresse_supp', {'id': adr.idAdresse})}}">supprimer cette adresse</a>
                        </span>
                    </div>
                {% endfor %}
            {% endif %}
            <a href="{{ path('odysseus_front_adresse_ajout')}}">Ajouter  adresse</a>
            <span class="supp_adresse">
            </span>
        </div>
                
    </div>   
</div>
