{% extends "OdysseusUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div id="form_connexion" class="bloc">
    <h2>Formulaire de connexion</h2>
    {% if error %}
        {# S'il y a une erreur, on l'affiche dans un joli cadre #}
        <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <div>
            <label for="username">Login :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" required="required" />
        </div>
        <div>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Se souvenir de moi</label>
        </div>

        <button type="submit" id="_submit" name="_submit">Connexion</button>
    </form>
</div>

{% endblock fos_user_content %}
