{% extends "OdysseusBackBundle::layout.html.twig" %}

{% block title %} 
	Lister des commandes en attente de paiement - {{ parent() }}
{% endblock %}

{% block odysseusback_body %}
	
    <h2 class="page-header">Liste des commandes en attente de paiement</h2>  
        
    {% for message in app.session.flashbag.get('commande') %}
        <p class="bg-success contextual">{{ message }}</p>
    {% endfor %}
        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Client</th>    
                    <th>Client ip</th>
                    <th>Vendeur</th>
                    <th>Date de commande</th>
                    <th>Date de paiement</th>
                    <th>Montant</th>
                    <th>Adresse de livraison</th>
                    <th>Adresse de facturation</th>
                    <th>Mode de paiement</th>
                    <th>Etat</th>
                    <th>Valider payÃ©e</th> 
                </tr>
            </thead>
            <tbody>
                {% if (liste_commandess | length) > 0 %}
                    {% for commande in liste_commandes %} 
                        <tr>
                            <td> {# client.user.username #} </td>
                            <td> {{ commande.clientIp }} </td>
                            <td>  </td>
                            <td> {{ commande.dateCommande|date("d/m/Y") }} </td>
                            <td> {{ commande.datePaiement|date("d/m/Y") }} </td>
                            <td> {{ commande.montant }} </td>
                            <td> {# commande.adresseLivraison #} </td>
                            <td> {# commande.adresseFacturation #} </td>
                            <td> {# commande.modePaiement #} </td>
                            <td> {{ commande.etat }} </td>
                            <td>
                                <a href="{{ path('odysseus_back_lister_commande_valider_payee', {id: commande.idCommande}) }}"><i class="glyphicon glyphicon-usd"></i></a> 
                            </td>
                        </tr>
                    {% endfor %}
                        
               {% else %}
                    <tr> 
                            <td colspan="11">Pas de commandes en attente de paiement.</td>
                    </tr>
               {% endif %}
            </tbody>
        </table>
           	
{% endblock %}