<div class="well">
	<form method="post" action="" {{ form_enctype(form) }} >

		{# les erreurs générales du form #}
                {{ form_errors(form) }}

		<div class="row show-grid">
                    <div class="col-md-2"> {{ form_label(form.titre, "Titre de la page") }} </div>
                    <div class="col-md-6"> {{ form_errors(form.titre) }} </div>
                    <div class="col-md-6"> {{ form_widget(form.titre) }} </div>
		</div>
                <br/>
		<div class="row show-grid">
                    <div class="col-md-2"> {{ form_label(form.contenu, "Contenu de la page") }} </div>
                    <div class="col-md-10"> {{ form_errors(form.contenu) }} </div>
                    <div class="col-md-10"> {{ form_widget(form.contenu) }} </div>
		</div>
                <br/>
                <div class="row show-grid">
                    <div class="col-md-2"> {{ form_label(form.slug, "Slug") }} </div>
                    <div class="col-md-6"> {{ form_errors(form.slug) }} </div>
                    <div class="col-md-6"> {{ form_widget(form.slug) }} </div>
		</div>
                
                <br/>
		<input type="submit" value="Valider" class="btn btn-success">
                {{ form_rest(form) }}
	</form>
</div>	