<!--<h3>Formulaire de catégorie</h3>-->

<div class="well">
	<form method="post" action="" {{ form_enctype(form) }} >

		{# les erreurs générales du form #}
		{{ form_errors(form) }}

		<div>
			{# génération du label #}
			{{ form_label(form.nom, "Nom de la catégorie") }}

			{# affichage des erreurs pour ce champ #}
			{{ form_errors(form.nom) }}

			{# génération de l'input #}
			{{ form_widget(form.nom) }}
		</div>

		{# idem pour un autre champ#}
		<div>
			{{ form_label(form.alaune, "Catégorie à la une") }}
			{{ form_errors(form.alaune) }}
			{{ form_widget(form.alaune) }}
		</div>
                
                <br>
		<input type="submit" value="Valider" class="btn btn-success">
                {{ form_rest(form) }}
	</form>
</div>	