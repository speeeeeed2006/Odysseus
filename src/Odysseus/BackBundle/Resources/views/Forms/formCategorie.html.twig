<div class="well">
	<form method="post" action="" {{ form_enctype(form) }} >

		{# les erreurs générales du form #}
                {{ form_errors(form) }}

		<div class="row show-grid"> 
                    <div class="col-md-2"> {{ form_label(form.nom, "Nom de la catégorie") }} </div>
                    <div class="col-md-6"> {{ form_errors(form.nom) }} </div>
                    <div class="col-md-6"> {{ form_widget(form.nom) }} </div>
		</div>
                <br/>
		{# idem pour un autre champ#}
		<div class="row show-grid">
                    <div class="col-md-2"> {{ form_label(form.alaune, "Catégorie à la une") }} </div>
                    <div class="col-md-6"> {{ form_errors(form.alaune) }} </div>
                    <div class="col-md-6"> {{ form_widget(form.alaune) }} </div>
		</div>
                
                <br/>
		<input type="submit" value="Valider" class="btn btn-success">
                {{ form_rest(form) }}
	</form>
</div>	