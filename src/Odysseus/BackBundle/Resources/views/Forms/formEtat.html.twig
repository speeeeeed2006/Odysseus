<!--<h3>Formulaire d'état</h3>-->

<div class="well">
	<form method="post" action="" {{ form_enctype(form) }} >

		{# les erreurs générales du form #}
		{{ form_errors(form) }}

		<div class="row show-grid">
                    <div class="col-md-2">
			{# génération du label #}
			{{ form_label(form.nom, "Nom de l'état") }}
                    </div>
                    <div class="col-md-6">
			{# affichage des erreurs pour ce champ #}
			{{ form_errors(form.nom) }}
                    </div>
                    <div class="col-md-6">
			{# génération de l'input #}
			{{ form_widget(form.nom) }}
                    </div>
		</div>
                <br/>
		<div class="row show-grid">
                    <div class="col-md-2">
			{# génération du label #}
			{{ form_label(form.type, "Type de l'état") }}
                    </div>
                    <div class="col-md-6">
			{# affichage des erreurs pour ce champ #}
			{{ form_errors(form.type) }}
                    </div>
                    <div class="col-md-6">
			{# génération de l'input #}
			{{ form_widget(form.type) }}
                    </div>
		</div>
                
                <br\>
		<input type="submit" value="Valider" class="btn btn-success">
                {{ form_rest(form) }}
	</form>
</div>	